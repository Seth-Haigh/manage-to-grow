<%- include("partials/header") -%>

<body>
    <div class="container shadow rounded">
      <h1>Manage Life for Personal and Professional Growth</h1>
      <img src="/images/MTG Logo.png" class="image-posts" alt="Manage-To-Grow.com Logo">
      <p><%= startingContent%></p>

      <% posts.forEach(function(post){ %>
        <h2> <%= post.title %> </h2>
        <p>
          <%= post.content.substring(0,99) + "..." %>
          <a href="/posts/<%=post._id %>">Read More</a>
        </p>
      <% }); %>
    </div>
</body>

<%- include("partials/footer") -%>
